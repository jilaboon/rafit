# ===========================================
# RAFIT Environment Configuration
# ===========================================
# Copy this file to .env.local for development
# NEVER commit .env.local or any file with real secrets

# ===========================================
# Database
# ===========================================
DATABASE_URL="postgresql://rafit:rafit_dev_password@localhost:5433/rafit?schema=public"

# ===========================================
# Authentication
# ===========================================
# Generate with: openssl rand -base64 32
AUTH_SECRET="your-super-secret-key-change-in-production"
AUTH_URL="http://localhost:3000"

# Session configuration
SESSION_MAX_AGE=86400  # 24 hours in seconds
SESSION_UPDATE_AGE=3600  # Update session every hour

# ===========================================
# Redis (for caching and rate limiting)
# ===========================================
REDIS_URL="redis://localhost:6379"

# ===========================================
# Email (Resend)
# ===========================================
RESEND_API_KEY="re_your_api_key"
EMAIL_FROM="RAFIT <noreply@rafit.co.il>"

# ===========================================
# SMS (Twilio) - Optional
# ===========================================
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# ===========================================
# Stripe
# ===========================================
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ===========================================
# Application
# ===========================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="RAFIT"

# Environment: development | staging | production
NODE_ENV="development"

# ===========================================
# Security
# ===========================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Encryption key for sensitive fields (32 bytes base64)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY="your-32-byte-encryption-key-here"

# ===========================================
# Observability
# ===========================================
# Sentry DSN (optional)
SENTRY_DSN=""

# Log level: debug | info | warn | error
LOG_LEVEL="info"
